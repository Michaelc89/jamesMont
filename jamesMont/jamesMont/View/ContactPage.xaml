<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jamesMont.View.ContactPage">
    <ContentPage.Content>
        <StackLayout  BackgroundColor="#3897f0">
            <Label  x:Name="HiLabel" HorizontalOptions="End" TextColor="White" FontFamily=""/>


            



                <Button Text="Send Email"        Image="email.png"  BorderRadius="20" BackgroundColor="HotPink" Clicked="SendEmail"     Grid.Row="0" Grid.Column="0"/>
                <Button Text="Open Map"          Image="Location.png"    Clicked="OpenMap"       Grid.Row="2" Grid.Column="0"/>
                <Button Text="Call Us"           Image="ContactUs.png"    Clicked="CallUs"        Grid.Row="4" Grid.Column="0"/>
                <Button Text="Take A Picture"    Image="camera.png"   Clicked="TakeAPicture"  Grid.Row="6" Grid.Column="0"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>