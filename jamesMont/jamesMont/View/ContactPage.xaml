<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jamesMont.View.ContactPage">
    <ContentPage.Content>
        <StackLayout  BackgroundColor="#3897f0">
            <Label  x:Name="HiLabel" HorizontalOptions="End" TextColor="White" FontFamily=""/>

            <Button Text="Send Email"       Clicked="SendEmail"/>
            <Button Text="Open Map"         Clicked="OpenMap"/>
            <Button Text="Call Us"          Clicked="CallUs"/>
            <Button Text="Take A Picture"   Clicked="TakeAPicture"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>