<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jamesMont.View.BookingConfirm">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#3897f0">
            <Label x:Name="LabelBook" TextColor="White" FontSize="Large"></Label>
            <Label x:Name="LabelBook2" TextColor="White" FontSize="Large"></Label>
            <Button Text="Book Now" Clicked="book_method"/>

            <Image x:Name="image" HeightRequest="200" WidthRequest="200"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>