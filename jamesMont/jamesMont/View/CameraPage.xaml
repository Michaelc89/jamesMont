<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jamesMont.View.CameraPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout  BackgroundColor="#3897f0">

                <Label  x:Name="HiLabel" HorizontalOptions="End" TextColor="White" FontFamily=""/>
                <StackLayout>
                    <Image x:Name="PhotoImage" HeightRequest="350" />
                </StackLayout>
                <Button x:Name="CameraButton" Text="Take Photo" Grid.Row="1" Clicked="CameraButton_Clicked"/>
                <Button x:Name="SendImage" Text="Send Chosen Image" Grid.Row="2" Clicked="Select_Image" />
                <Button x:Name="Exit" Text="Choose Image and Send " Grid.Row="3" Clicked="Choose_Image_and_Send_Clicked" />
                <Button x:Name="DetectFace" Text="Detect Face " Grid.Row="4" Clicked="Detect_Face" />
                <Label  x:Name="genderLabel" HorizontalOptions="Center" TextColor="Red" FontFamily="" IsVisible="False" Grid.Row="5"/>
                <Label  x:Name="glassesLabel" HorizontalOptions="Center" TextColor="Red" FontFamily="" IsVisible="False" Grid.Row="6"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>