<?xml version="1.0" encoding="utf-8" ?>
<ContentPage NavigationPage.HasNavigationBar="False" 
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jamesMont.View.MenuPage"
             Title="Menu">
    <ContentPage.Content>
        <StackLayout  BackgroundColor="#3897f0">
            <Label  x:Name="HiLabel" HorizontalOptions="End" TextColor="White" FontFamily=""/>
            <Button Text="Log Out" HorizontalOptions="End" Clicked="logOut" />

            <Button Text="Make A Booking" Clicked="MakeABooking"  Image="MakeBook.png" />
            <Button Text="Edit A Booking" Clicked="EditABooking" Image="EditBook.png"/>
            <Button Text="Shop" Clicked="Shop" Image="ShoppingCart.png"/>
            <Button Text="Contact" Clicked="contact" Image="ContactUs.png"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>