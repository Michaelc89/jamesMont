<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jamesMont.View.ProductPage">
    <ContentPage.Content>
        <StackLayout>
            <Image x:Name="image"/>
            <Label  x:Name="product" Text=""
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
           

            <Picker Title="Select a Quantity" x:Name="boom" />

            <Label x:Name="labelxx" TextColor="Blue" FontSize="Large"/>
            <Button Text="Buy me" Clicked="Buy_Product"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>