<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jamesMont.View.RegisterPage"
             Title="Register">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#3897f0">
            <Entry Placeholder="First Name" PlaceholderColor="White"  x:Name="Fname" TextColor="White"/>
            <Entry Placeholder="Surname" PlaceholderColor="White"   x:Name="Sname" TextColor="White"/>
            <Entry Placeholder="Email "  PlaceholderColor="White"  Keyboard="Email" x:Name="email" TextColor="White" />
            <Entry Placeholder="Password" x:Name="pass" PlaceholderColor="White"  IsPassword="True" TextColor="White"/>
            <Entry Placeholder="Confirm Password" PlaceholderColor="White"  x:Name="conf_Pass" IsPassword="True" TextColor="White"/>
            <Entry Placeholder="Phone Number" PlaceholderColor="White"  x:Name="phone" TextColor="White" />
            <Button x:Name="CameraButton" Text="Take Photo" Grid.Row="1" Clicked="CameraButton_Clicked"/>
            <Button Text="Make Account" Clicked="createAccount"/>

          
        </StackLayout>
    </ContentPage.Content>
</ContentPage>